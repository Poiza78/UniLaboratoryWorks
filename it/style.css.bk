body {
	color: #e9e3f0;
	background-color: #140d16;
	margin:1em auto;
	max-width:40em;
	padding:0 .62em;
	font-family: 1.2em/1.62 iosevka;
}
h1,h2,h3 {
	line-height:1.2;
}
a:link, a:visited {
	color: #140d16;
	background-color: #CEB5D2;
	border-style: solid;
	border-color: #AB8FAC;
	font-family: iosevka;
	padding: 5px 15px;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	opacity: 0.9;
}
a:hover, a:active {
  opacity: 1.0;
}
